@model Participant

@{
    ViewData["Title"] = "Delete Participant";
    var houseLeader = ViewBag.HouseLeader as HouseLeader;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash me-2"></i>Delete Participant
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> You are about to delete this participant. This action cannot be undone.
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h4 class="card-title">@Model.FullName</h4>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Gender:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.GenderGroup</span>
                                </dd>
                                
                                <dt class="col-sm-4">Class:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.EventClassGroup</span>
                                </dd>
                                
                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">@Model.AgeInYears years</dd>
                                
                                <dt class="col-sm-4">Points:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.Points pts</span>
                                </dd>
                                
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <dt class="col-sm-4">Notes:</dt>
                                    <dd class="col-sm-8">@Model.Notes</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    @if (Model.Points > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            <strong>Note:</strong> This participant has earned @Model.Points points. Deleting them will remove their results from the tournament.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-2"></i>Yes, Delete Participant
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>