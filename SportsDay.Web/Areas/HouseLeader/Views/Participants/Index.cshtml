@model HouseLeaderDashboardViewModel

@{
    ViewData["Title"] = "House Participants";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header" style="background-color: @Model.House.Color; color: white;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-people me-2"></i>@Model.House.Name Participants
                        </h2>
                        <a asp-action="Add" class="btn btn-light">
                            <i class="bi bi-person-plus me-2"></i>Add Participant
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-trophy me-2"></i>
                        <strong>Tournament:</strong> @Model.ActiveTournament?.Name
                        <span class="ms-3">|</span>
                        <span class="ms-3"><strong>Total Participants:</strong> @Model.TotalParticipants</span>
                        <span class="ms-3">|</span>
                        <span class="ms-3"><strong>Total Points:</strong> @Model.TotalPoints</span>
                    </div>

                    @if (Model.Participants.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Class</th>
                                        <th>Age Group</th>
                                        <th>Age</th>
                                        <th>Points</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var participant in Model.Participants)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@participant.FullName</strong>
                                            </td>
                                            <td>
                                                @if (participant.GenderGroup == DivisionType.Boys)
                                                {
                                                    <span class="badge bg-primary">Boys</span>
                                                }
                                                else if (participant.GenderGroup == DivisionType.Girls)
                                                {
                                                    <span class="badge bg-danger">Girls</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@participant.GenderGroup</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@participant.EventClassGroup</span>
                                            </td>
                                            <td>@participant.AgeGroup</td>
                                            <td>@participant.AgeInYears years</td>
                                            <td>
                                                <span class="badge bg-success">@participant.Points pts</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(participant.Notes))
                                                {
                                                    <span class="text-muted" title="@participant.Notes">
                                                        @(participant.Notes.Length > 30 ? participant.Notes.Substring(0, 30) + "..." : participant.Notes)
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Edit" asp-route-id="@participant.Id" 
                                                       class="btn btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@participant.Id" 
                                                       class="btn btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            <i class="bi bi-inbox me-2"></i>
                            No participants registered yet. Click "Add Participant" to register your first participant.
                        </div>
                    }

                    <hr class="my-4" />

                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>