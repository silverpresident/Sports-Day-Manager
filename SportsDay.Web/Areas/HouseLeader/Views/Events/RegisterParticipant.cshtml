@model RegisterParticipantToEventViewModel

@{
    ViewData["Title"] = "Register Participant to Event";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header" style="background-color: @Model.House.Color; color: white;">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>Register Participants - @Model.Event.Name
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-calendar-event me-2"></i>
                        <strong>Event #@Model.Event.EventNumber:</strong> @Model.Event.Name
                        <span class="ms-3">|</span>
                        <span class="ms-3"><strong>Division:</strong> @Model.Event.GenderGroup</span>
                        <span class="ms-3">|</span>
                        <span class="ms-3"><strong>Class:</strong> @Model.Event.ClassGroup</span>
                        @if (Model.Event.ParticipantLimit > 0)
                        {
                            <span class="ms-3">|</span>
                            <span class="ms-3"><strong>Limit:</strong> @Model.RegisteredParticipants.Count / @Model.Event.ParticipantLimit per house</span>
                        }
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Available Participants (@Model.AvailableParticipants.Count)</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.AvailableParticipants.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var participant in Model.AvailableParticipants)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <strong>@participant.FullName</strong>
                                                        <br />
                                                        <small class="text-muted">
                                                            @participant.GenderGroup | @participant.EventClassGroup | @participant.AgeInYears years
                                                        </small>
                                                    </div>
                                                    <form asp-action="RegisterParticipant" asp-route-id="@Model.Event.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="participantId" value="@participant.Id" />
                                                        <button type="submit" class="btn btn-success btn-sm">
                                                            <i class="bi bi-plus-circle"></i> Add
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary mb-0">
                                            <i class="bi bi-info-circle me-2"></i>
                                            No eligible participants available. All eligible participants are already registered or you need to add more participants to your house.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Registered Participants (@Model.RegisteredParticipants.Count)</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.RegisteredParticipants.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var participant in Model.RegisteredParticipants)
                                            {
                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <strong>@participant.FullName</strong>
                                                        <br />
                                                        <small class="text-muted">
                                                            @participant.GenderGroup | @participant.EventClassGroup | @participant.AgeInYears years
                                                        </small>
                                                    </div>
                                                    <form asp-action="UnregisterParticipant" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="eventId" value="@Model.Event.Id" />
                                                        <input type="hidden" name="participantId" value="@participant.Id" />
                                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                                onclick="return confirm('Are you sure you want to unregister this participant?');">
                                                            <i class="bi bi-x-circle"></i> Remove
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary mb-0">
                                            <i class="bi bi-inbox me-2"></i>
                                            No participants registered yet. Select participants from the available list to register them.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Events
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Event.Id" class="btn btn-outline-info">
                            <i class="bi bi-eye me-2"></i>View Event Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
