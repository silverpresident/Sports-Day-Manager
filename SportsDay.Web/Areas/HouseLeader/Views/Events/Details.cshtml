@model HouseLeaderEventViewModel

@{
    ViewData["Title"] = "Event Details";
    var houseLeader = ViewBag.HouseLeader as HouseLeader;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header" style="background-color: @houseLeader?.House?.Color; color: white;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-calendar-event me-2"></i>Event #@Model.Event.EventNumber: @Model.Event.Name
                        </h2>
                        @if (Model.Event.Status == EventStatus.Scheduled && Model.CanRegisterMore)
                        {
                            <a asp-action="RegisterParticipant" asp-route-id="@Model.Event.Id" class="btn btn-light">
                                <i class="bi bi-person-plus me-2"></i>Register Participants
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Event Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Division:</dt>
                                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Event.GenderGroup</span></dd>
                                        <dt class="col-sm-4">Class:</dt>
                                        <dd class="col-sm-8"><span class="badge bg-info">@Model.Event.ClassGroup</span></dd>
                                        <dt class="col-sm-4">Category:</dt>
                                        <dd class="col-sm-8">@Model.Event.Category</dd>
                                        <dt class="col-sm-4">Type:</dt>
                                        <dd class="col-sm-8">@Model.Event.Type</dd>
                                        <dt class="col-sm-4">Status:</dt>
                                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Event.Status</span></dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Participation</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-6">House Participants:</dt>
                                        <dd class="col-sm-6"><span class="badge bg-success">@Model.HouseParticipantCount</span></dd>
                                        <dt class="col-sm-6">Total Participants:</dt>
                                        <dd class="col-sm-6"><span class="badge bg-secondary">@Model.TotalParticipantCount</span></dd>
                                        @if (Model.Event.ParticipantLimit > 0)
                                        {
                                            <dt class="col-sm-6">Limit per House:</dt>
                                            <dd class="col-sm-6">@Model.Event.ParticipantLimit</dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.HouseParticipants.Any())
                    {
                        <h4><i class="bi bi-people me-2"></i>Registered Participants</h4>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Class</th>
                                        <th>Age</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var participant in Model.HouseParticipants)
                                    {
                                        <tr>
                                            <td><strong>@participant.FullName</strong></td>
                                            <td><span class="badge bg-secondary">@participant.GenderGroup</span></td>
                                            <td><span class="badge bg-info">@participant.EventClassGroup</span></td>
                                            <td>@participant.AgeInYears years</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            <i class="bi bi-inbox me-2"></i>
                            No participants from your house registered for this event.
                        </div>
                    }

                    <hr class="my-4" />
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Events
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
