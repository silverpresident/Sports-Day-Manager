@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Environment
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - St Jago High School Sports Day</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.svg" type="image/svg+xml" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-success border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-gear-fill me-2"></i>Admin Dashboard
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Events" asp-action="Index">
                                <i class="bi bi-calendar-event me-1"></i>Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Results" asp-action="Index">
                                <i class="bi bi-list-ol me-1"></i>Results
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Announcements" asp-action="Index">
                                <i class="bi bi-megaphone me-1"></i>Announcements
                            </a>
                        </li>
                        @if (Environment.IsDevelopment())
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-area="Admin" asp-controller="Developer"
                                    asp-action="Index">
                                    <i class="bi bi-code-slash me-1"></i>Developer
                                </a>
                            </li>
                        }
                        <li class="nav-item dropdown"></li>
                        <a class="nav-link dropdown-toggle" href="#" id="tournamentDropdown" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-list me-1"></i>
                            Entities
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="tournamentDropdown">
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Tournaments"
                                    asp-action="Index">
                                    <i class="bi bi-trophy me-1"></i> Tournaments
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Houses" asp-action="Index">
                                    <i class="bi bi-house me-1"></i> Houses
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="EventTemplates"
                                    asp-action="Index">
                                    <i class="bi bi-file-earmark-text me-1"></i>Templates
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Participants"
                                    asp-action="Index">Participants</a>
                            </li>
                        </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="activeTournamentDropdown" role="button"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-sitemap me-1"></i>
                                Active Tournament
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="activeTournamentDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="ActiveTournament"
                                        asp-action="Index">Active Tournament</a>

                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="ActiveTournament"
                                        asp-action="SelectParticipants">Tournament Participants</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="TournamentHouses"
                                        asp-action="Index">Houses</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Event"
                                        asp-action="Index">Events</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="publicDropdown" role="button"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-list me-1"></i>
                                Public Pages
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="publicDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Dashboard"
                                        asp-action="Index">Home Page</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Announcement"
                                        asp-action="Index">Announcements</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="House"
                                        asp-action="Index">Houses</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Event"
                                        asp-action="Index">Events</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Result"
                                        asp-action="Index">Results</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Update"
                                        asp-action="Index">Updates</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-arrow-left-circle me-1"></i>Back to Site
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - St Jago High School Sports Day - Admin Area
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // Initialize SignalR connection
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/SportsHub")
            .withAutomaticReconnect()
            .build();

        connection.start().catch(function (err) {
            console.error(err.toString());
        });

        // Auto-hide alerts
        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 4000);
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
