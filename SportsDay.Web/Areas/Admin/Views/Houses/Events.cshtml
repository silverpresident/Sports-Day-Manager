@model IEnumerable<SportsDay.Lib.Models.Event>
@{
    var house = ViewBag.House as SportsDay.Lib.Models.House;
    ViewData["Title"] = $"{house?.Name} - Registered Events";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-calendar-event text-success me-2"></i>Events for @house?.Name
            </h1>
            <p class="text-muted mt-2">All events where @house?.Name has registered participants</p>
        </div>
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@house?.Id" class="btn btn-outline-success">
                <i class="bi bi-house-fill me-2"></i>House Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- House Info Card -->
    <div class="card mb-4" style="border-left: 4px solid @house?.Color;">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="card-title mb-2">
                        <span class="badge" style="background-color: @house?.Color; color: white;">
                            @house?.Name
                        </span>
                    </h5>
                    <p class="card-text text-muted mb-0">
                        <i class="bi bi-calendar-event me-2"></i>
                        Registered in <strong>@Model.Count()</strong> event(s)
                    </p>
                </div>
                <div class="col-md-4 text-md-end">
                    <div class="d-flex justify-content-md-end gap-3">
                        <div>
                            <div class="small text-muted">Boys Events</div>
                            <div class="fw-bold text-success">@Model.Count(e => e.GenderGroup == SportsDay.Lib.Enums.DivisionType.Boys)</div>
                        </div>
                        <div>
                            <div class="small text-muted">Girls Events</div>
                            <div class="fw-bold text-success">@Model.Count(e => e.GenderGroup == SportsDay.Lib.Enums.DivisionType.Girls)</div>
                        </div>
                        <div>
                            <div class="small text-muted">Open Events</div>
                            <div class="fw-bold text-success">@Model.Count(e => e.GenderGroup == SportsDay.Lib.Enums.DivisionType.Open)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Events Table -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul me-2"></i>Registered Events
                    </h5>
                    <span class="badge bg-light text-dark">
                        Total: @Model.Count()
                    </span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Event #</th>
                                <th>Event Name</th>
                                <th>Division</th>
                                <th>Class</th>
                                <th>Category</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.OrderBy(e => e.EventNumber))
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@evt.EventNumber</span>
                                    </td>
                                    <td>
                                        <strong>@evt.Name</strong>
                                    </td>
                                    <td>
                                        @if (evt.GenderGroup == SportsDay.Lib.Enums.DivisionType.Boys)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-gender-male me-1"></i>Boys
                                            </span>
                                        }
                                        else if (evt.GenderGroup == SportsDay.Lib.Enums.DivisionType.Girls)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-gender-female me-1"></i>Girls
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-gender-ambiguous me-1"></i>Open
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (evt.ClassGroup == SportsDay.Lib.Enums.EventClass.Open)
                                        {
                                            <span class="badge bg-secondary">Open</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Class @evt.ClassGroupNumber</span>
                                        }
                                    </td>
                                    <td>@evt.Category</td>
                                    <td>
                                        @if (evt.Type == SportsDay.Lib.Enums.EventType.Distance)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-rulers me-1"></i>Distance
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-stopwatch me-1"></i>Speed
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @switch (evt.Status)
                                        {
                                            case SportsDay.Lib.Enums.EventStatus.Scheduled:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-clock me-1"></i>Scheduled
                                                </span>
                                                break;
                                            case SportsDay.Lib.Enums.EventStatus.InProgress:
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-play-circle me-1"></i>In Progress
                                                </span>
                                                break;
                                            case SportsDay.Lib.Enums.EventStatus.Completed:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Completed
                                                </span>
                                                break;
                                            case SportsDay.Lib.Enums.EventStatus.Cancelled:
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Cancelled
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" 
                                           class="btn btn-sm btn-outline-success"
                                           title="View event details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No Events Found</h4>
                <p class="text-muted">
                    @house?.Name has not registered participants in any events yet.
                </p>
                <a asp-action="Details" asp-route-id="@house?.Id" class="btn btn-success mt-3">
                    <i class="bi bi-house-fill me-2"></i>Back to House Details
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-hide alerts
        window.setTimeout(function() {
            $(".alert").fadeTo(500, 0).slideUp(500, function() {
                $(this).remove();
            });
        }, 4000);
    </script>
}