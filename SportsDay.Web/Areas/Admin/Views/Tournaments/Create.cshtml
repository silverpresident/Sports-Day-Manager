@model SportsDay.Lib.Models.Tournament
@{
    ViewData["Title"] = "Create Tournament";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle-fill text-success me-2"></i>Create Tournament
            </h1>
            <p class="text-muted mt-2">Create a new sports day tournament</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:
                        </div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-card-text me-2"></i>Tournament Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter tournament name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="form-text">Example: Sports Day 2024</div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TournamentDate" class="form-label">
                                    <i class="bi bi-calendar me-2"></i>Tournament Date
                                </label>
                                <input asp-for="TournamentDate" class="form-control" type="date" />
                                <span asp-validation-for="TournamentDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                <i class="bi bi-flag me-2"></i>Set as active tournament
                            </label>
                            <div class="form-text">Only one tournament can be active at a time</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Create Tournament
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Tournament Information
                    </h5>
                    <p class="card-text">
                        Creating a new tournament will allow you to:
                    </p>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Organize events
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Register participants
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Track results
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Post announcements
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Set min date to today
        document.querySelector('input[type="date"]').min = new Date().toISOString().split("T")[0];

        // Auto-update year when date changes
        document.querySelector('input[type="date"]').addEventListener('change', function() {
            document.querySelector('input[type="number"]').value = new Date(this.value).getFullYear();
        });
    </script>
}
