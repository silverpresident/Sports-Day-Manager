@model IEnumerable<SportsDay.Lib.Models.Tournament>
@{
    ViewData["Title"] = "Tournaments";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-trophy-fill text-success me-2"></i>Tournaments
            </h1>
            <p class="text-muted mt-2">Manage sports day tournaments</p>
        </div>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>New Tournament
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">
            <i class="bi bi-list-ul me-2"></i>All Tournaments
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">
                                <i class="bi bi-trophy me-1"></i>Name
                            </th>
                            <th scope="col">
                                <i class="bi bi-calendar me-1"></i>Date
                            </th>
                            <th scope="col">
                                <i class="bi bi-check-circle me-1"></i>Status
                            </th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Name</strong>
                                    </td>
                                    <td>
                                        @if (item.TournamentDate.HasValue)
                                        {
                                            <span>@item.TournamentDate.Value.ToString("dddd, MMMM d, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-circle me-1"></i>Inactive
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-success"
                                               title="View details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-success"
                                               title="Edit tournament">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (item.IsActive)
                                            {
                                                <form asp-action="SetActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Deactivate tournament">
                                                        <i class="bi bi-pause-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="SetActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Activate tournament">
                                                        <i class="bi bi-play-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal@(item.Id)"
                                                    title="Delete tournament">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(item.Id)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete <strong>@item.Name</strong>?</p>
                                                @if (item.TournamentDate.HasValue)
                                                {
                                                    <p class="text-muted mb-2">
                                                        <i class="bi bi-calendar me-1"></i>@item.TournamentDate.Value.ToString("MMMM d, yyyy")
                                                    </p>
                                                }
                                                <p class="mb-0 text-danger">
                                                    <i class="bi bi-exclamation-circle me-2"></i>This will delete all associated events, participants, and results. This action cannot be undone.
                                                </p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                                </button>
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-2"></i>Delete Tournament
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="bi bi-trophy text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-3 mb-0">No tournaments found</p>
                                    <a asp-action="Create" class="btn btn-success mt-3">
                                        <i class="bi bi-plus-circle me-2"></i>Create Your First Tournament
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}
