@model dynamic
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h2 class="mb-4">Dashboard</h2>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Tournaments</h6>
                            <h2 class="mb-0">@Model.TotalTournaments</h2>
                        </div>
                        <i class="bi bi-trophy fs-1"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Participants</h6>
                            <h2 class="mb-0">@Model.TotalParticipants</h2>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Events</h6>
                            <h2 class="mb-0">@Model.TotalEvents</h2>
                        </div>
                        <i class="bi bi-calendar-event fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total Results</h6>
                            <h2 class="mb-0">@Model.TotalResults</h2>
                        </div>
                        <i class="bi bi-list-ol fs-1"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Active Announcements</h6>
                            <h2 class="mb-0">@Model.ActiveAnnouncements</h2>
                        </div>
                        <i class="bi bi-megaphone fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("Create", "Tournaments", new { area = "Admin" })" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Create New Tournament
                        </a>
                        <a href="@Url.Action("Create", "Events", new { area = "Admin" })" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Add New Event
                        </a>
                        <a href="@Url.Action("Create", "Announcements", new { area = "Admin" })" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Post Announcement
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/sportshub")
            .build();

        connection.start().catch(err => console.error(err));
    </script>
}
