@model SportsDay.Lib.Models.Participant

@{
    ViewData["Title"] = "Participant Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-person-badge"></i> Participant Details
                </h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Main Information Card -->
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-person"></i> Personal Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Full Name</dt>
                                <dd class="col-sm-8">
                                    <h5>@Model.FullName</h5>
                                </dd>

                                <dt class="col-sm-4">First Name</dt>
                                <dd class="col-sm-8">@Model.FirstName</dd>

                                <dt class="col-sm-4">Last Name</dt>
                                <dd class="col-sm-8">@Model.LastName</dd>

                                <dt class="col-sm-4">Date of Birth</dt>
                                <dd class="col-sm-8">
                                    @Model.DateOfBirth.ToString("MMMM dd, yyyy")
                                </dd>

                                <dt class="col-sm-4">Age</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.AgeInYears years</strong>
                                </dd>

                                <dt class="col-sm-4">Age Group</dt>
                                <dd class="col-sm-8">@Model.AgeGroup</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-trophy"></i> Tournament & House
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Tournament</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Tournament != null)
                                    {
                                        <strong>@Model.Tournament.Name</strong>
                                        <br />
                                        <small class="text-muted">
                                            @Model.Tournament.StartDate.ToString("MMM dd, yyyy") - 
                                            @Model.Tournament.EndDate.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                </dd>

                                <dt class="col-sm-4">House</dt>
                                <dd class="col-sm-8">
                                    @if (Model.House != null)
                                    {
                                        <span class="badge fs-6" style="background-color: @Model.House.Color;">
                                            @Model.House.Name
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-diagram-3"></i> Classification
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Gender/Division</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary fs-6">@Model.GenderGroup</span>
                                </dd>

                                <dt class="col-sm-4">Event Class</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info fs-6">@Model.EventClassGroup</span>
                                </dd>

                                <dt class="col-sm-4">Class Group Number</dt>
                                <dd class="col-sm-8">@Model.ClassGroupNumber</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="bi bi-card-text"></i> Notes
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="col-md-4">
                    <!-- Points Card -->
                    <div class="card mb-4 border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-star-fill"></i> Points
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            <h1 class="display-3 text-success mb-0">@Model.Points</h1>
                            <p class="text-muted mb-0">Total Points Earned</p>
                        </div>
                    </div>

                    <!-- Results Summary Card -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-list-check"></i> Results Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Results != null && Model.Results.Any())
                            {
                                <div class="text-center mb-3">
                                    <h3 class="text-primary">@Model.Results.Count</h3>
                                    <p class="text-muted mb-0">Event(s) Participated</p>
                                </div>
                                <hr />
                                <div class="list-group list-group-flush">
                                    @foreach (var result in Model.Results.OrderByDescending(r => r.CreatedAt).Take(5))
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <small class="text-muted">
                                                        @if (result.Event != null)
                                                        {
                                                            @result.Event.Name
                                                        }
                                                    </small>
                                                </div>
                                                <div>
                                                    @if (result.Placement.HasValue)
                                                    {
                                                        <span class="badge bg-primary">@result.Placement?.ToOrdinal()</span>
                                                    }
                                                    <span class="badge bg-success">@result.Points pts</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                @if (Model.Results.Count > 5)
                                {
                                    <div class="text-center mt-2">
                                        <small class="text-muted">Showing 5 of @Model.Results.Count results</small>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-3">
                                    <i class="bi bi-inbox display-4"></i>
                                    <p class="mb-0 mt-2">No results yet</p>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Audit Information Card -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-clock-history"></i> Audit Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="mb-0">
                                <dt>Created</dt>
                                <dd>
                                    @Model.CreatedAt.ToString("MMM dd, yyyy h:mm tt")
                                    @if (!string.IsNullOrWhiteSpace(Model.CreatedBy))
                                    {
                                        <br />
                                        <small class="text-muted">by @Model.CreatedBy</small>
                                    }
                                </dd>

                                @if (Model.UpdatedAt.HasValue)
                                {
                                    <dt>Last Updated</dt>
                                    <dd>
                                        @Model.UpdatedAt.Value.ToString("MMM dd, yyyy h:mm tt")
                                        @if (!string.IsNullOrWhiteSpace(Model.UpdatedBy))
                                        {
                                            <br />
                                            <small class="text-muted">by @Model.UpdatedBy</small>
                                        }
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>