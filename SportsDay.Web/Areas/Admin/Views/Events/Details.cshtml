@model SportsDay.Lib.Models.Event
@using Humanizer
@using SportsDay.Lib.Enums
@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-calendar-event-fill text-success me-2"></i>@Model.Name
            </h1>
            <p class="text-muted mt-2">Event details and results</p>
        </div>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="bi bi-pencil me-2"></i>Edit Event
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Event Overview -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle me-2"></i>Event Overview
                        </h5>
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-flag me-1"></i>@Model.Status
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="small text-muted">Division</div>
                            <div class="fw-bold">@Model.Division</div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Class</div>
                            <div class="fw-bold">
                                @(Model.AgeGroup == "0" ? "Open" : $"Class {Model.AgeGroup}")
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Category</div>
                            <div class="fw-bold">@Model.Category</div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Type</div>
                            <div class="fw-bold">@Model.Type</div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Point System</div>
                            <div class="fw-bold">@Model.PointSystem</div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Schedule</div>
                            <div class="fw-bold">
                                @if (Model.ScheduledTime.HasValue)
                                {
                                    <i class="bi bi-clock me-1"></i>@Model.ScheduledTime.Value.ToString("MMM dd, HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Not scheduled</span>
                                }
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Participant Limit</div>
                            <div class="fw-bold">
                                @if (Model.ParticipantLimit > 0)
                                {
                                    <i class="bi bi-person-lines-fill me-1"></i>@Model.ParticipantLimit
                                }
                                else
                                {
                                    <span class="text-muted">No limit</span>
                                }
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Max Per House</div>
                            <div class="fw-bold">
                                @if (Model.MaxParticipantsPerHouse > 0)
                                {
                                    <i class="bi bi-house-fill me-1"></i>@Model.MaxParticipantsPerHouse
                                }
                                else
                                {
                                    <span class="text-muted">No limit</span>
                                }
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="small text-muted">Published</div>
                            <div class="fw-bold">
                                @if (Model.IsPublished)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-eye me-1"></i>Published
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-eye-slash me-1"></i>Not Published
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Record Card -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-trophy me-2"></i>Event Record
                </div>
                <div class="card-body">
                    @if (Model.Record.HasValue)
                    {
                        <div class="text-center">
                            <div class="display-4 fw-bold text-warning mb-2">@Model.Record.Value</div>
                            <div class="text-muted">
                                <i class="bi bi-person me-1"></i>@Model.RecordHolder
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="bi bi-trophy text-warning fs-1 d-block mb-2"></i>
                            <p class="mb-0">No record set</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            @if (Model.Status != EventStatus.Completed && Model.Status != EventStatus.Cancelled)
            {
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (Model.Status == EventStatus.Scheduled)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="status" value="@EventStatus.InProgress" />
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="bi bi-play-circle me-2"></i>Start Event
                                    </button>
                                </form>
                            }
                            else if (Model.Status == EventStatus.InProgress)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="status" value="@EventStatus.Completed" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-check-circle me-2"></i>Complete Event
                                    </button>
                                </form>
                            }
                            <form asp-action="UpdateStatus" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="status" value="@EventStatus.Cancelled" />
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-circle me-2"></i>Cancel Event
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Results -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-list-ol me-2"></i>Results
                        </h5>
                        <span class="badge bg-light text-dark">
                            @Model.Results.Count Results
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>
                                        <i class="bi bi-person me-2"></i>Participant
                                    </th>
                                    <th>
                                        <i class="bi bi-house me-2"></i>House
                                    </th>
                                    <th>
                                        <i class="bi bi-trophy me-2"></i>Place
                                    </th>
                                    <th>
                                        <i class="bi bi-stopwatch me-2"></i>Result
                                    </th>
                                    <th>
                                        <i class="bi bi-award me-2"></i>Points
                                    </th>
                                    <th>Record</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Results.Any())
                                {
                                    foreach (var result in Model.Results.OrderBy(r => r.Placement))
                                    {
                                        <tr>
                                            <td>@result.Participant.FullName</td>
                                            <td>
                                                <span class="badge" style="background-color: @result.House.Color">
                                                    @result.House.Name
                                                </span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(result.ResultLabel))
                                                {
                                                    var labelClass = result.ResultLabel switch
                                                    {
                                                        "DQ" => "bg-danger",
                                                        "DNS" => "bg-secondary",
                                                        "DNF" => "bg-warning text-dark",
                                                        "1st" => "bg-success",
                                                        "2nd" => "bg-info text-dark",
                                                        "3rd" => "bg-primary",
                                                        _ => "bg-light text-dark"
                                                    };
                                                    <span class="badge @labelClass">
                                                        @result.ResultLabel
                                                    </span>
                                                }
                                                else if (result.Placement.HasValue)
                                                {
                                                    <span class="badge bg-success">
                                                        @result.Placement.Value.ToOrdinal()
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (result.SpeedOrDistance.HasValue)
                                                {
                                                    @result.SpeedOrDistance.Value
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @result.Points pts
                                                </span>
                                            </td>
                                            <td>
                                                @if (result.IsNewRecord)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-trophy-fill me-1"></i>New Record
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <i class="bi bi-clipboard-x text-muted fs-1 d-block mb-2"></i>
                                            <p class="text-muted mb-0">No results recorded</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
