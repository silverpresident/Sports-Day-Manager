@model SportsDay.Lib.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-pencil-fill text-success me-2"></i>Edit Event
            </h1>
            <p class="text-muted mt-2">Modify event details</p>
        </div>
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="bi bi-eye me-2"></i>View Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-calendar-event me-2"></i>Event Details
                    </div>
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-flag me-1"></i>@Model.Status
                    </span>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TournamentId" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-card-text me-2"></i>Event Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="DivisionId" class="form-label">
                                    <i class="bi bi-diagram-3 me-2"></i>Division
                                </label>
                                <select asp-for="DivisionId" asp-items="ViewBag.Divisions" 
                                        class="form-select">
                                    <option value="">Select Division</option>
                                </select>
                                <span asp-validation-for="DivisionId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ClassGroup" class="form-label">
                                    <i class="bi bi-layers me-2"></i>Class
                                </label>
                                <select asp-for="ClassGroup" asp-items="ViewBag.Classes" 
                                        class="form-select">
                                    <option value="">Select Class</option>
                                </select>
                                <span asp-validation-for="ClassGroup" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">
                                    <i class="bi bi-tag me-2"></i>Category
                                </label>
                                <input asp-for="Category" class="form-control" placeholder="Enter category" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label">
                                    <i class="bi bi-speedometer2 me-2"></i>Event Type
                                </label>
                                <select asp-for="Type" asp-items="ViewBag.Types" 
                                        class="form-select">
                                    <option value="">Select Type</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ScheduledTime" class="form-label">
                                    <i class="bi bi-clock me-2"></i>Scheduled Time
                                </label>
                                <input asp-for="ScheduledTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ScheduledTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PointSystem" class="form-label">
                                    <i class="bi bi-list-ol me-2"></i>Point System
                                </label>
                                <select asp-for="PointSystem" asp-items="ViewBag.PointSystems" 
                                        class="form-select">
                                    <option value="">Select Point System</option>
                                </select>
                                <span asp-validation-for="PointSystem" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="ParticipantLimit" class="form-label">
                                    <i class="bi bi-person-lines-fill me-2"></i>Participant Limit
                                </label>
                                <input asp-for="ParticipantLimit" class="form-control" type="number" min="0" />
                                <span asp-validation-for="ParticipantLimit" class="text-danger"></span>
                                <div class="form-text">Set to 0 for no limit</div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="MaxParticipantsPerHouse" class="form-label">
                                    <i class="bi bi-house-fill me-2"></i>Max Per House
                                </label>
                                <input asp-for="MaxParticipantsPerHouse" class="form-control" type="number" min="0" />
                                <span asp-validation-for="MaxParticipantsPerHouse" class="text-danger"></span>
                                <div class="form-text">Set to 0 for no limit</div>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="IsPublished" class="form-label">
                                    <i class="bi bi-eye me-2"></i>Published
                                </label>
                                <div class="form-check form-switch mt-2">
                                    <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="IsPublished">Visible to public</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Record" class="form-label">
                                    <i class="bi bi-trophy me-2"></i>Current Record
                                </label>
                                <input asp-for="Record" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Record" class="text-danger"></span>
                                <div class="form-text">Optional: Enter current record (if any)</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="RecordHolder" class="form-label">
                                    <i class="bi bi-person me-2"></i>Record Holder
                                </label>
                                <input asp-for="RecordHolder" class="form-control" />
                                <span asp-validation-for="RecordHolder" class="text-danger"></span>
                                <div class="form-text">Optional: Enter record holder's name</div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">
                                    <i class="bi bi-flag me-2"></i>Status
                                </label>
                                <select asp-for="Status" asp-items="ViewBag.Statuses"
                                        class="form-select">
                                    <option value="">Select Status</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Event Statistics -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-graph-up me-2"></i>Event Statistics
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-people text-success me-2"></i>Participants
                            </div>
                            <span class="badge bg-success rounded-pill">@Model.Results.Count</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-trophy text-success me-2"></i>Results Recorded
                            </div>
                            <span class="badge bg-success rounded-pill">
                                @Model.Results.Count(r => r.Placement.HasValue || r.SpeedOrDistance.HasValue)
                            </span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-award text-success me-2"></i>New Records
                            </div>
                            <span class="badge bg-success rounded-pill">
                                @Model.Results.Count(r => r.IsNewRecord)
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Tips -->
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Quick Tips
                    </h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Update event details
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Manage event status
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Track records
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success me-2"></i>View statistics
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Update record input based on event type
        const typeSelect = document.querySelector('select[name="Type"]');
        const recordInput = document.querySelector('input[name="Record"]');
        const recordLabel = recordInput.previousElementSibling;

        function updateRecordLabel() {
            if (typeSelect.value === '0') { // Distance
                recordLabel.innerHTML = '<i class="bi bi-trophy me-2"></i>Current Record (Distance)';
                recordInput.placeholder = 'Enter distance record';
            } else if (typeSelect.value === '1') { // Speed
                recordLabel.innerHTML = '<i class="bi bi-trophy me-2"></i>Current Record (Speed)';
                recordInput.placeholder = 'Enter speed record';
            }
        }

        // Set initial label
        updateRecordLabel();

        // Update on change
        typeSelect.addEventListener('change', updateRecordLabel);
    </script>
}
