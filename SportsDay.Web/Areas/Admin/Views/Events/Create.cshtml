@model SportsDay.Lib.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-plus-circle-fill text-success me-2"></i>Create Event
            </h1>
            <p class="text-muted mt-2">Add a new event to the tournament</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-calendar-event me-2"></i>Event Details
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>Please correct the following errors:
                        </div>

                        <input type="hidden" asp-for="TournamentId" />

                        <div class="row mb-4">
                             <div class="col-md-6">
                                <label asp-for="EventNumber" class="form-label">
                                    <i class="bi bi-card-text me-2"></i>Event Number
                                </label>
                                <input asp-for="EventNumber" class="form-control" placeholder="Enter event number" />
                                <span asp-validation-for="EventNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-card-text me-2"></i>Event Name
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="DivisionId" class="form-label">
                                    <i class="bi bi-diagram-3 me-2"></i>Division
                                </label>
                                <select asp-for="DivisionId" asp-items="ViewBag.Divisions" 
                                        class="form-select">
                                    <option value="">Select Division</option>
                                </select>
                                <span asp-validation-for="DivisionId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ClassGroup" class="form-label">
                                    <i class="bi bi-layers me-2"></i>Class
                                </label>
                                <select asp-for="ClassGroup" asp-items="ViewBag.Classes" 
                                        class="form-select">
                                    <option value="">Select Class</option>
                                </select>
                                <span asp-validation-for="ClassGroup" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">
                                    <i class="bi bi-tag me-2"></i>Category
                                </label>
                                <input asp-for="Category" class="form-control" placeholder="Enter category" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Type" class="form-label">
                                    <i class="bi bi-speedometer2 me-2"></i>Event Type
                                </label>
                                <select asp-for="Type" asp-items="ViewBag.Types" 
                                        class="form-select">
                                    <option value="">Select Type</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ScheduledTime" class="form-label">
                                    <i class="bi bi-clock me-2"></i>Scheduled Time
                                </label>
                                <input asp-for="ScheduledTime" class="form-control" type="datetime-local" />
                                <span asp-validation-for="ScheduledTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PointSystem" class="form-label">
                                    <i class="bi bi-list-ol me-2"></i>Point System
                                </label>
                                <select asp-for="PointSystem" asp-items="ViewBag.PointSystems" 
                                        class="form-select">
                                    <option value="">Select Point System</option>
                                </select>
                                <span asp-validation-for="PointSystem" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Record" class="form-label">
                                    <i class="bi bi-trophy me-2"></i>Current Record
                                </label>
                                <input asp-for="Record" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Record" class="text-danger"></span>
                                <div class="form-text">Optional: Enter current record (if any)</div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="RecordHolder" class="form-label">
                                    <i class="bi bi-person me-2"></i>Record Holder
                                </label>
                                <input asp-for="RecordHolder" class="form-control" />
                                <span asp-validation-for="RecordHolder" class="text-danger"></span>
                                <div class="form-text">Optional: Enter record holder's name</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Create Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-info-circle me-2"></i>Event Information
                    </h5>
                    <p class="card-text">
                        When creating a new event, consider:
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Select appropriate division
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Choose event class (Open or Class 1-4)
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Set event type (Distance/Speed)
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>Configure point system
                        </li>
                        <li>
                            <i class="bi bi-check-circle text-success me-2"></i>Add existing records if any
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Set min datetime to today
        document.querySelector('input[type="datetime-local"]').min = 
            new Date().toISOString().slice(0, 16);

        // Update record input based on event type
        document.querySelector('select[name="Type"]').addEventListener('change', function() {
            const recordInput = document.querySelector('input[name="Record"]');
            const recordLabel = recordInput.previousElementSibling;
            
            if (this.value === '0') { // Distance
                recordLabel.innerHTML = '<i class="bi bi-trophy me-2"></i>Current Record (Distance)';
                recordInput.placeholder = 'Enter distance record';
            } else if (this.value === '1') { // Speed
                recordLabel.innerHTML = '<i class="bi bi-trophy me-2"></i>Current Record (Speed)';
                recordInput.placeholder = 'Enter speed record';
            }
        });
    </script>
}
