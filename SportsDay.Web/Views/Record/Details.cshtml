@model SportsDay.Lib.ViewModels.RecordViewModel
@using SportsDay.Lib.Enums
@{
    ViewData["Title"] = $"Record - {Model.EventName}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-house me-1"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Record" asp-action="Index">
                    <i class="bi bi-trophy me-1"></i>Records
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.EventName</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                @if (Model.IsNewRecord)
                {
                    <i class="bi bi-star-fill text-warning me-2"></i>
                }
                else
                {
                    <i class="bi bi-trophy-fill text-success me-2"></i>
                }
                @Model.EventName
            </h1>
            <p class="text-muted mt-2">
                @if (Model.IsNewRecord)
                {
                    <span class="badge bg-warning text-dark me-2">NEW RECORD</span>
                }
                <i class="bi bi-info-circle me-1"></i>Record details
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-success">
            <i class="bi bi-arrow-left me-1"></i>Back to Records
        </a>
    </div>

    <div class="row">
        <!-- Record Highlight Card -->
        <div class="col-lg-4 mb-4">
            <div class="card @(Model.IsNewRecord ? "border-warning" : "border-success")">
                <div class="card-header @(Model.IsNewRecord ? "bg-warning text-dark" : "bg-success text-white")">
                    <h5 class="card-title mb-0">
                        @if (Model.IsNewRecord)
                        {
                            <i class="bi bi-star-fill me-2"></i><text>New Record</text>
                        }
                        else
                        {
                            <i class="bi bi-trophy-fill me-2"></i><text>Current Record</text>
                        }
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    <div class="display-1 fw-bold @(Model.IsNewRecord ? "text-warning" : "text-success") mb-2">
                        @(Model.RecordValue?.ToString("0.##") ?? "N/A")
                    </div>
                    <div class="text-muted fs-4">
                        @(Model.EventType == EventType.Speed ? "seconds" : "meters")
                    </div>
                    @if (!string.IsNullOrEmpty(Model.RecordHolder))
                    {
                        <hr />
                        <div class="mt-3">
                            <i class="bi bi-person-fill text-success me-2 fs-4"></i>
                            <span class="fs-5">@Model.RecordHolder</span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.HouseName))
                    {
                        <div class="mt-2">
                            <span class="badge fs-6" style="background-color: @Model.HouseColor; color: white;">
                                <i class="bi bi-house-fill me-1"></i>@Model.HouseName
                            </span>
                        </div>
                    }
                    @if (Model.YearSet.HasValue)
                    {
                        <div class="mt-2 text-muted">
                            <i class="bi bi-calendar-event me-1"></i>Set in @Model.YearSet
                        </div>
                    }
                    @if (Model.DateSet.HasValue)
                    {
                        <div class="mt-1 text-muted small">
                            <i class="bi bi-clock me-1"></i>@Model.DateSet.Value.ToString("MMMM dd, yyyy")
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Event Details Card -->
        <div class="col-lg-8 mb-4">
            <div class="sports-card card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Event Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-trophy fs-4 text-success"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Event Name</small>
                                    <strong>@Model.EventName</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                @{
                                    var (divIcon, divClass, divBg) = Model.Division switch
                                    {
                                        DivisionType.Boys => ("bi-gender-male", "text-primary", "bg-primary"),
                                        DivisionType.Girls => ("bi-gender-female", "text-danger", "bg-danger"),
                                        DivisionType.Open => ("bi-gender-ambiguous", "text-success", "bg-success"),
                                        _ => ("bi-question-circle", "text-secondary", "bg-secondary")
                                    };
                                }
                                <div class="@divBg bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi @divIcon fs-4 @divClass"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Division</small>
                                    <strong class="@divClass">@Model.Division</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-123 fs-4 text-info"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Class</small>
                                    <strong>@(Model.ClassGroup == EventClass.Open ? "Open" : $"Class {(int)Model.ClassGroup}")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                @{
                                    var catIcon = Model.Category?.ToLower() switch
                                    {
                                        "track" => "bi-signpost-split",
                                        "field" => "bi-bullseye",
                                        _ => "bi-tag"
                                    };
                                }
                                <div class="bg-secondary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi @catIcon fs-4 text-secondary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Category</small>
                                    <strong>@Model.Category</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-speedometer2 fs-4 text-warning"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Event Type</small>
                                    <strong>@(Model.EventType == EventType.Speed ? "Speed (Time)" : "Distance")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-calendar-check fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Tournament</small>
                                    <strong>@(Model.TournamentName ?? "N/A")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Record Note Section -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="row">
            <div class="col-12">
                <div class="sports-card card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-journal-text me-2"></i>Record Notes
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Record Type Info -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 @(Model.IsNewRecord ? "bg-warning bg-opacity-10" : "bg-success bg-opacity-10")">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            @if (Model.IsNewRecord)
                            {
                                <i class="bi bi-star-fill fs-1 text-warning"></i>
                            }
                            else
                            {
                                <i class="bi bi-trophy fs-1 text-success"></i>
                            }
                        </div>
                        <div class="col">
                            <h5 class="mb-1">@Model.RecordType</h5>
                            <p class="mb-0 text-muted">
                                @if (Model.IsNewRecord)
                                {
                                    <text>This record was broken during the current tournament. The previous record has been surpassed!</text>
                                }
                                else
                                {
                                    <text>This is the standing record for this event. It has not been broken in the current tournament.</text>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>