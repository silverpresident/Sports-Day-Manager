@model SportsDay.Lib.ViewModels.HouseParticipantsViewModel
@{
    ViewData["Title"] = "House Participants";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="House" asp-action="Index">Houses</a></li>
            <li class="breadcrumb-item"><a asp-controller="House" asp-action="Details"
                    asp-route-id="@Model.House.Id">@Model.House.Name</a></li>
            <li class="breadcrumb-item active" aria-current="page">Members</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="me-3"
                style="width: 60px; height: 60px; background-color: @Model.House.Color; border-radius: 50%;"></div>
            <div>
                <h1 class="mb-0">@Model.House.Name Participants</h1>
                <p class="text-muted mb-0">
                    <span class="badge" style="background-color: @Model.House.Color;">@Model.House.ColorName</span>
                    @if (Model.ActiveTournament != null)
                    {
                        <span class="ms-2">@Model.ActiveTournament.Name</span>
                    }
                </p>
                <p class="text-muted mt-2">
                    <i class="bi bi-info-circle me-1"></i>Showing all participants for @Model.House?.Name house
                </p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Details" asp-route-id="@Model.House.Id" class="btn btn-outline-success">
                <i class="bi bi-house me-1"></i>House Details
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Houses
            </a>
        </div>
    </div>

    <div class="sports-card card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>Participant List
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-sports mb-0" aria-label="Participants table">
                    <thead>
                        <tr>
                            <th scope="col">
                                <i class="bi bi-person me-1"></i>Name
                            </th>
                            <th scope="col">
                                <i class="bi bi-gender-ambiguous me-1"></i>Gender
                            </th>
                            <th scope="col">
                                <i class="bi bi-layers me-1"></i>Division
                            </th>
                            <th scope="col">
                                <i class="bi bi-123 me-1"></i>Class
                            </th>
                            <th scope="col">
                                <i class="bi bi-sticky me-1"></i>Notes
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Participants != null && Model.Participants.Any())
                        {
                            foreach (var participant in Model.Participants)
                            {
                                <tr>
                                    <td>@participant.FullName</td>
                                    <td>@participant.GenderGroup</td>
                                    <td>@participant.Division</td>
                                    <td>Class @participant.AgeGroup</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(participant.Notes))
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-info-circle me-1"></i>@participant.Notes
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <i class="bi bi-emoji-neutral me-2"></i>No participants found for this house
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add aria-labels to the table rows for better accessibility
        document.addEventListener('DOMContentLoaded', function () {
            const participantRows = document.querySelectorAll('tbody tr');
            participantRows.forEach(row => {
                const participantName = row.querySelector('td')?.textContent;
                if (participantName) {
                    row.setAttribute('aria-label', `Participant: ${participantName}`);
                }
            });
        });
    </script>
}
