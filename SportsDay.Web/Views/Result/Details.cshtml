@model SportsDay.Lib.ViewModels.ResultViewModel
@using SportsDay.Lib.Enums
@{
    ViewData["Title"] = $"Result - {Model.ParticipantName}";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-house me-1"></i>Home
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Result" asp-action="Index">
                    <i class="bi bi-list-ol me-1"></i>Results
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">@Model.ParticipantName</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                @if (Model.IsNewRecord)
                {
                    <i class="bi bi-star-fill text-warning me-2"></i>
                }
                else if (Model.Placement == 1)
                {
                    <i class="bi bi-trophy-fill text-warning me-2"></i>
                }
                else if (Model.Placement == 2)
                {
                    <i class="bi bi-award-fill text-secondary me-2"></i>
                }
                else if (Model.Placement == 3)
                {
                    <i class="bi bi-award text-bronze me-2"></i>
                }
                else
                {
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                }
                @Model.ParticipantName
            </h1>
            <p class="text-muted mt-2">
                @if (Model.IsNewRecord)
                {
                    <span class="badge bg-danger me-2">NEW RECORD</span>
                }
                <i class="bi bi-info-circle me-1"></i>Result details for @Model.EventName
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-success">
            <i class="bi bi-arrow-left me-1"></i>Back to Results
        </a>
    </div>

    <div class="row">
        <!-- Result Highlight Card -->
        <div class="col-lg-4 mb-4">
            <div class="card @(Model.Placement == 1 ? "border-warning" : Model.Placement == 2 ? "border-secondary" : Model.Placement == 3 ? "border-bronze" : "border-success")">
                <div class="card-header @(Model.Placement == 1 ? "bg-warning text-dark" : Model.Placement == 2 ? "bg-secondary text-white" : Model.Placement == 3 ? "bg-bronze text-white" : "bg-success text-white")">
                    <h5 class="card-title mb-0">
                        <i class="bi @Model.PlacementIcon me-2"></i>@Model.FormattedPlacement Place
                    </h5>
                </div>
                <div class="card-body text-center py-5">
                    @if (Model.SpeedOrDistance.HasValue)
                    {
                        <div class="display-1 fw-bold @(Model.Placement == 1 ? "text-warning" : Model.Placement == 2 ? "text-secondary" : Model.Placement == 3 ? "text-bronze" : "text-success") mb-2">
                            @Model.SpeedOrDistance.Value.ToString("0.##")
                        </div>
                        <div class="text-muted fs-4">
                            @(Model.EventType == EventType.Speed ? "seconds" : "meters")
                        </div>
                    }
                    else
                    {
                        <div class="display-1 fw-bold text-success mb-2">
                            @Model.FormattedPlacement
                        </div>
                        <div class="text-muted fs-4">
                            Placement
                        </div>
                    }
                    <hr />
                    <div class="mt-3">
                        <span class="badge bg-success fs-5">
                            <i class="bi bi-plus-circle me-1"></i>@Model.Points Points
                        </span>
                    </div>
                    @if (Model.IsNewRecord)
                    {
                        <div class="mt-3">
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-star-fill me-1"></i>NEW RECORD!
                            </span>
                        </div>
                    }
                </div>
            </div>

            <!-- House Card -->
            <div class="card mt-4">
                <div class="card-header" style="background-color: @Model.HouseColor; color: white;">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-house-fill me-2"></i>@Model.HouseName
                    </h5>
                </div>
                <div class="card-body text-center">
                    <a asp-controller="House" asp-action="Details" asp-route-id="@Model.HouseId" class="btn btn-outline-success">
                        <i class="bi bi-eye me-1"></i>View House
                    </a>
                </div>
            </div>
        </div>

        <!-- Event Details Card -->
        <div class="col-lg-8 mb-4">
            <div class="sports-card card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Event Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-trophy fs-4 text-success"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Event Name</small>
                                    <strong>@Model.EventName</strong>
                                    @if (Model.EventNumber.HasValue)
                                    {
                                        <small class="text-muted ms-1">(#@Model.EventNumber)</small>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                @{
                                    var (divIcon, divClass, divBg) = Model.Division switch
                                    {
                                        DivisionType.Boys => ("bi-gender-male", "text-primary", "bg-primary"),
                                        DivisionType.Girls => ("bi-gender-female", "text-danger", "bg-danger"),
                                        DivisionType.Open => ("bi-gender-ambiguous", "text-success", "bg-success"),
                                        _ => ("bi-question-circle", "text-secondary", "bg-secondary")
                                    };
                                }
                                <div class="@divBg bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi @divIcon fs-4 @divClass"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Division</small>
                                    <strong class="@divClass">@Model.Division</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-123 fs-4 text-info"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Class</small>
                                    <strong>@(Model.ClassGroup == EventClass.Open ? "Open" : $"Class {(int)Model.ClassGroup}")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                @{
                                    var catIcon = Model.Category?.ToLower() switch
                                    {
                                        "track" => "bi-signpost-split",
                                        "field" => "bi-bullseye",
                                        _ => "bi-tag"
                                    };
                                }
                                <div class="bg-secondary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi @catIcon fs-4 text-secondary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Category</small>
                                    <strong>@Model.Category</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-speedometer2 fs-4 text-warning"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Event Type</small>
                                    <strong>@(Model.EventType == EventType.Speed ? "Speed (Time)" : "Distance")</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="bi bi-calendar-check fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <small class="text-muted d-block">Tournament</small>
                                    <strong>@Model.TournamentName</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Participant Info Section -->
    <div class="row">
        <div class="col-12">
            <div class="sports-card card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-fill me-2"></i>Participant Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 rounded-circle p-4 me-4">
                                    <i class="bi bi-person-fill fs-1 text-success"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">@Model.ParticipantName</h4>
                                    <p class="text-muted mb-0">
                                        <span class="badge" style="background-color: @Model.HouseColor; color: white;">
                                            <i class="bi bi-house-fill me-1"></i>@Model.HouseName
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 text-md-end mt-3 mt-md-0">
                            <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-success">
                                <i class="bi bi-calendar-event me-1"></i>View Event
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Result Summary -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 @(Model.Placement == 1 ? "bg-warning bg-opacity-10" : Model.Placement == 2 ? "bg-secondary bg-opacity-10" : Model.Placement == 3 ? "bg-bronze bg-opacity-10" : "bg-success bg-opacity-10")">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            @if (Model.Placement == 1)
                            {
                                <i class="bi bi-trophy-fill fs-1 text-warning"></i>
                            }
                            else if (Model.Placement == 2)
                            {
                                <i class="bi bi-award-fill fs-1 text-secondary"></i>
                            }
                            else if (Model.Placement == 3)
                            {
                                <i class="bi bi-award fs-1 text-bronze"></i>
                            }
                            else
                            {
                                <i class="bi bi-check-circle fs-1 text-success"></i>
                            }
                        </div>
                        <div class="col">
                            <h5 class="mb-1">@Model.FormattedPlacement Place Finish</h5>
                            <p class="mb-0 text-muted">
                                @Model.ParticipantName finished in @Model.FormattedPlacement place in @Model.EventName,
                                earning @Model.Points points for @Model.HouseName.
                                @if (Model.IsNewRecord)
                                {
                                    <strong class="text-danger">This result set a new record!</strong>
                                }
                            </p>
                        </div>
                        <div class="col-auto">
                            <small class="text-muted">
                                <i class="bi bi-clock me-1"></i>@Model.RecordedAt.ToString("MMMM dd, yyyy h:mm tt")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>