@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section bg-success text-white py-5 mb-4 rounded-3 shadow">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 fw-bold">St Jago High School Sports Day</h1>
                <p class="lead">Experience the thrill of competition and sportsmanship</p>
                <div class="d-flex gap-3">
                    <a href="#leaderboard" class="btn btn-warning btn-lg">
                        <i class="bi bi-trophy-fill me-2"></i>View Leaderboard
                    </a>
                    <a asp-controller="Event" asp-action="Index" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-calendar-event-fill me-2"></i>View Events
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-trophy-fill text-warning" style="font-size: 8rem;"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <section id="announcements" class="mb-4">
            <div class="sports-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-megaphone-fill me-2"></i>Announcements
                    </h2>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_AnnouncementsPartial")
                </div>
            </div>
        </section>

        <section id="leaderboard" class="mb-4">
            <div class="sports-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-trophy-fill me-2"></i>Leaderboard
                    </h2>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_LeaderboardPartial")
                </div>
            </div>
        </section>
    </div>

    <div class="col-md-4">
        <section id="updates">
            <div class="sports-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0">
                        <i class="bi bi-bell-fill me-2"></i>Live Updates
                    </h2>
                </div>
                <div class="card-body p-0">
                    @await Html.PartialAsync("_UpdateStreamPartial")
                </div>
            </div>
        </section>
    </div>
</div>
