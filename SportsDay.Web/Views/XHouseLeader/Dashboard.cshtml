@using SportsDay.Lib.Models

@{
    ViewData["Title"] = "House Leader Dashboard";
    var houseLeader = ViewBag.HouseLeader as HouseLeader;
    var activeTournament = ViewBag.ActiveTournament as Tournament;
    var participants = ViewBag.Participants as List<Participant> ?? new List<Participant>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header" style="background-color: @houseLeader?.House?.Color; color: white;">
                    <h2 class="mb-0">
                        <i class="bi bi-house-door me-2"></i>@houseLeader?.House?.Name House Dashboard
                    </h2>
                </div>
                <div class="card-body">
                    @if (activeTournament == null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>No Active Tournament</strong> - There is no active tournament at this time. Please check back later.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-trophy me-2"></i>
                            <strong>Active Tournament:</strong> @activeTournament.Name
                            <br />
                            <small>@activeTournament.StartDate.ToString("MMMM dd, yyyy") - @activeTournament.EndDate.ToString("MMMM dd, yyyy")</small>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4>
                                <i class="bi bi-people me-2"></i>Registered Participants (@participants.Count)
                            </h4>
                            <a asp-controller="Participant" asp-action="Register" class="btn btn-success">
                                <i class="bi bi-plus-circle me-2"></i>Register New Participant
                            </a>
                        </div>

                        @if (participants.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>Class</th>
                                            <th>Age Group</th>
                                            <th>Age</th>
                                            <th>Points</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var participant in participants)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@participant.FullName</strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@participant.GenderGroup</span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@participant.EventClassGroup</span>
                                                </td>
                                                <td>@participant.AgeGroup</td>
                                                <td>@participant.AgeInYears years</td>
                                                <td>
                                                    <span class="badge bg-success">@participant.Points pts</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-controller="Participant" asp-action="Edit" asp-route-id="@participant.Id" 
                                                           class="btn btn-outline-primary" title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <a asp-controller="Participant" asp-action="Delete" asp-route-id="@participant.Id" 
                                                           class="btn btn-outline-danger" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-secondary text-center">
                                <i class="bi bi-inbox me-2"></i>
                                No participants registered yet. Click the button above to register your first participant.
                            </div>
                        }
                    }

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <a asp-action="Unregister" class="btn btn-outline-danger">
                            <i class="bi bi-x-circle me-2"></i>Unregister as House Leader
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>